<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.masha.applicationname.Settings"
    android:background="@color/darkGreen">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/width"
        android:layout_marginTop="101dp"
        android:textColor="@color/yell"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:numeric="integer"
        android:hint="8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/height"
        android:textColor="@color/yell"
        android:layout_below="@+id/width"
        android:layout_alignParentEnd="true"
        android:hint="16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lblw"
        android:id="@+id/textView2"
        android:textColor="@color/yell"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignBottom="@+id/width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lblh"
        android:id="@+id/textView3"
        android:textColor="@color/yell"
        android:layout_alignBottom="@+id/height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/minW"
        android:id="@+id/textView4"
        android:textColor="@color/yell"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/minH"
        android:id="@+id/textView5"
        android:textColor="@color/yell"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="я не могу придумать название для этой кнопки"
        android:id="@+id/bttnSentence"
        android:background="@color/darkGreen"
        android:textColor="@color/yell"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/musoff"
        android:id="@+id/radioButton"
        android:layout_below="@+id/bttnSentence"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textColor="@color/yell"
        android:checked="false" />

</RelativeLayout>
